@model ShoppingCart
@{
    ViewData["Title"] = "Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Cart</h2>
@if (Model?.Items?.Any() ?? false)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("N0") $</td>
                    <td>@((item.Price * item.Quantity).ToString("N0")) $</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <h4>Total: @Model.GetTotal().ToString("N0") $</h4>
        <a asp-action="Checkout" class="btn btn-primary">Checkout</a>
    </div>
}
else
{
    <p>Your cart is empty</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
}
@model _2280601038_LeVuMinhHoang.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Product</h2>
        </div>
        <div class="card-body text-center p-4">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill fs-1 d-block mb-3"></i>
                <p class="fs-4">Are you sure you want to delete this product?</p>
                <p class="fw-bold fs-5">@Model.Name</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-height: 200px;" />
                </div>
            }

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th>Price</th>
                            <td>@Model.Price</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>@Model.Category?.Name</td>
                        </tr>
                    </table>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4 d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Permanently
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@model _2280601038_LeVuMinhHoang.Models.Category

@{
    ViewData["Title"] = "Xóa Danh mục";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Xóa Danh mục</h2>
        </div>
        <div class="card-body text-center p-4">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill fs-1 d-block mb-3"></i>
                <p class="fs-4">Bạn có chắc chắn muốn xóa danh mục này?</p>
                <p class="fw-bold fs-5">@Model.Name</p>
            </div>

            <div class="alert alert-danger">
                <i class="bi bi-info-circle-fill me-2"></i>
                Lưu ý: Việc xóa danh mục có thể ảnh hưởng đến các sản phẩm thuộc danh mục này.
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4 d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
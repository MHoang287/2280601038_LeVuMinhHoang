@model IEnumerable<_2280601038_LeVuMinhHoang.Models.Category>
@{
    ViewData["Title"] = "Quản lý Danh mục Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-gradient-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="bi bi-collection me-2"></i>Danh mục Sản phẩm
                </h2>
                <a asp-action="Add" class="btn btn-outline-light">
                    <i class="bi bi-plus-circle-fill me-1"></i>Thêm Danh mục
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="table-light text-center">
                        <tr>
                            <th class="align-middle"><i class="bi bi-tag me-2"></i>Tên Danh mục</th>
                            <th class="align-middle"><i class="bi bi-box-seam me-2"></i>Số lượng Sản phẩm</th>
                            <th class="align-middle"><i class="bi bi-gear me-2"></i>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var category in Model)
                            {
                                <tr class="align-middle text-center">
                                    <td>
                                        <span class="badge bg-primary me-2">
                                            <i class="bi bi-tag-fill"></i>
                                        </span>
                                        <span class="fw-semibold">@category.Name</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info rounded-pill">
                                            @(category.Products?.Count ?? 0)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil-square me-1"></i>Sửa
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash-fill me-1"></i>Xóa
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center p-4">
                                    <div class="alert alert-info d-flex align-items-center justify-content-center">
                                        <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                                        <span>Chưa có danh mục sản phẩm. Hãy tạo danh mục đầu tiên!</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
            <div class="text-muted">
                <i class="bi bi-collection-fill me-2"></i>
                Tổng số danh mục: <span class="fw-bold text-primary">@Model.Count()</span>
            </div>
            <div>
                <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary me-2">
                    <i class="bi bi-house-door-fill me-1"></i>Trang chủ
                </a>
                <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-grid-fill me-1"></i>Quản lý Sản phẩm
                </a>
            </div>
        </div>
    </div>
</div>
@model _2280601038_LeVuMinhHoang.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle me-2"></i>Chi tiết sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="card">
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;" />
                            }
                            else
                            {
                                <div class="bg-light rounded p-5">
                                    <i class="bi bi-image text-muted" style="font-size: 8rem;"></i>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <h2 class="mb-3">@Model.Name</h2>
                    <div class="mb-3">
                        <span class="badge bg-success fs-5 mb-2">@Model.Price.ToString("N0") đ</span>
                        <span class="badge bg-primary ms-2">@Model.Category?.Name</span>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Mô tả sản phẩm</h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="mb-0">@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">Không có mô tả sản phẩm.</p>
                            }
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Thông tin khác</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Mã sản phẩm:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Thuộc danh mục:</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>

                                <dt class="col-sm-4">Đường dẫn hình ảnh:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <code class="small">@Model.ImageUrl</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có hình ảnh</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
            </a>
            <div>
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-1"></i> Chỉnh sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">
                    <i class="bi bi-trash me-1"></i> Xóa
                </a>
            </div>
        </div>
    </div>
</div>
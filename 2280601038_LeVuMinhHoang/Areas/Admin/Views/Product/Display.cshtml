@model _2280601038_LeVuMinhHoang.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white py-3">
            <h3 class="mb-0 d-flex align-items-center">
                <i class="bi bi-info-circle me-3"></i>Chi tiết sản phẩm
            </h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-5 mb-4 mb-md-0">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center p-0">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded-top" style="max-height: 400px; width: 100%; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light rounded p-5">
                                    <i class="bi bi-image text-muted" style="font-size: 8rem;"></i>
                                    <p class="text-muted mt-2">Không có hình ảnh</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <h2 class="mb-3 text-dark">@Model.Name</h2>
                    <div class="mb-4">
                        <span class="badge bg-success fs-5 px-3 py-2">₫@Model.Price.ToString("N0")</span>
                        <span class="badge bg-primary ms-2 px-3 py-2">@Model.Category?.Name</span>
                    </div>

                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-header bg-light py-2">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="bi bi-file-text me-2"></i>Mô tả sản phẩm
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="text-muted">@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">Không có mô tả sản phẩm.</p>
                            }
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light py-2">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="bi bi-info-circle me-2"></i>Thông tin chi tiết
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4 text-muted">Mã sản phẩm:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4 text-muted">Danh mục:</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>

                                <dt class="col-sm-4 text-muted">Đường dẫn hình ảnh:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <code class="small text-muted">@Model.ImageUrl</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Không có hình ảnh</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-white border-0 d-flex justify-content-between py-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
            </a>
            <div>
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-dark me-2">
                    <i class="bi bi-pencil me-1"></i> Chỉnh sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Xóa
                </a>
            </div>
        </div>
    </div>
</div>
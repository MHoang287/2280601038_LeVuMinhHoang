@model _2280601038_LeVuMinhHoang.Models.Product

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Cập nhật sản phẩm</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Update" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label fw-medium">Tên sản phẩm</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-box"></i></span>
                                        <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" required />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Price" class="form-label fw-medium">Giá bán</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
                                            <span class="input-group-text">đ</span>
                                        </div>
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="CategoryId" class="form-label fw-medium">Danh mục</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories" required>
                                                <option value="">-- Chọn danh mục --</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label fw-medium">Mô tả sản phẩm</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết về sản phẩm"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-medium">Hình ảnh sản phẩm</label>
                                    <div class="card mb-2">
                                        <div class="card-body text-center p-3">
                                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                            {
                                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid mb-2" style="max-height: 200px; object-fit: contain;" />
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded p-4 mb-2">
                                                    <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                                                </div>
                                            }
                                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                                            <input type="hidden" asp-for="ImageUrl" />
                                            <div class="form-text">Chọn ảnh mới để thay đổi hình ảnh hiện tại</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
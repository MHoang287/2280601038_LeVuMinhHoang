@model Order
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">Đặt hàng thành công!</h2>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h3 class="mb-3">Cảm ơn bạn đã đặt hàng!</h3>
                    <p class="lead">Mã đơn hàng của bạn: <strong>#@Model.Id</strong></p>
                    <p>Tổng thanh toán: <strong class="text-danger">@Model.TotalPrice.ToString("N0") ₫</strong></p>

                    <div class="mt-5">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-3">
                            <i class="bi bi-house-door me-2"></i>Về trang chủ
                        </a>
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-receipt me-2"></i>Xem chi tiết đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
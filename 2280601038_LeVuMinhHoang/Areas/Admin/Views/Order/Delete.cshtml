@model _2280601038_LeVuMinhHoang.Models.Order

@{
    ViewData["Title"] = "Hủy đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Xác nhận hủy đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-circle me-2"></i>
                <strong>Lưu ý:</strong> Bạn có chắc chắn muốn hủy đơn hàng này? Hành động này không thể hoàn tác.
            </div>

            <div class="row mb-4">
                <div class="col-md-8 offset-md-2">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="mb-0">Chi tiết đơn hàng #@Model.Id</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Ngày đặt hàng:</strong></td>
                                    <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Tổng tiền:</strong></td>
                                    <td class="text-danger fw-bold">@String.Format("{0:N0} $", Model.TotalPrice)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Xác nhận hủy đơn hàng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>